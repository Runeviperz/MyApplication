<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="48dp"
        android:text="Welcome"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDisclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Disclaimer: RNG BOYS is an unfinished app that is slowly improving as I learn to code for android. Certain features taken from Tonikami's youtube channel mainly the http/php stuff. \n\nAs a note, passwords are stored in PLAIN TEXT (for now) so when creating an account please create a NEW password that is not used for anything else. \n \n Any improvements or suggestions are welcome!"
        android:layout_below="@+id/tvTitle"
        />

    <ImageView
        android:id="@+id/ivSmiley"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/smiley"
        android:layout_below="@+id/tvDisclaimer"
        android:layout_above="@+id/bBegin"/>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/bBegin"
        android:layout_width="match_parent"
        android:text="Let's Begin"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
